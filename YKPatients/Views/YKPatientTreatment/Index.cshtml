@model IEnumerable<YKPatients.Models.PatientTreatment>

@{
    ViewData["Title"] = $"Treatment for {ViewData["diagnosisName"]}, Patient: {ViewData["lastName"]}, {ViewData["firstName"]}";
}

<h1>@ViewData["title"]</h1>

<p>
    <a asp-action="Create">Add a Treatment for @ViewData["diagnosisName"], Patient: @ViewData["lastName"], @ViewData["firstName"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DatePrescribed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientDiagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Treatment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatePrescribed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientDiagnosis.PatientDiagnosisId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Treatment.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PatientTreatmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PatientTreatmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PatientTreatmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
